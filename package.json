{
  "name": "example-create-react-app-express",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "concurrently \"cd client && PORT=3000 yarn start\" \"cd server && PORT=4000 yarn start\""
  },
  "dependencies": {
    "express": "~4.14.0",
    "body-parser": "~1.15.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "hbs": "~4.0.1",
    "morgan": "~1.7.0",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "concurrently": "^3.6.0"
  },
  "heroku-postbuild": "cd client && npm install && npm run build"
}
